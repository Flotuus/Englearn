{% extends "base.html.twig" %}
{% block contenu %}

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <tr><th>Date</th><th>Nom</th><th>Message</th><th>Note</th><th></th><th></th></tr>
        {% for c in liste %}
            <tr><td>{{c.dateCom|date('d/m/Y')}}</td><td>{{c.nomUtilisateur}}</td><td>{{c.message}}</td><td>{{c.note}}</td ><td></tr>
        {% endfor %}
    </table>
    {% set nb = form.nbpages %}

    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li>
                <a href="index.php?page=listeCommentaire&nopage={{ 0 }}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {% for i in 1..nb %}
                <li><a href="index.php?page=listeCommentaire&nopage={{ i-1 }}">{{ i }}</a></li>
            {% endfor %}
            <li>
                <a href="index.php?page=listeCommentaire&nopage={{ nb-1 }}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
    {% if session.login is defined %}
    <a href="index.php?page=ajoutCommentaire">ajouter un commentaire</a>
    {% else %}
        Vous devez vous <a href="index.php?page=inscription">inscrire</a> ou vous <a href="index.php?page=connexion">connecter</a> pour poster un commentaire
    {% endif %}
{% endblock %}