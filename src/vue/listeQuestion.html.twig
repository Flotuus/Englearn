{# empty Twig template #}
{% extends "base.html.twig" %}
{% block contenu %}
    {% if form.valide is defined %}
    {% if form.valide == true %}
        <h1 class="h3 mb-3 font-weight-normal">{{ form.message }}</h1>
        <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=listeQuestion">Retourner sur la liste des questions</a></h1>

    {% else %}
        <h1 class="alert alert-danger" role="alert">{{ form.message }}</h1>
        <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=listeQuestion">Retourner sur la liste des questions</a></h1>

    {% endif %}
    {% else %}
    <div class="panel panel-default">
    <div class="panel-heading">Liste des questions</div>
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <tr><th>Intitulé</th><th>Réponse</th><th>Test Associé</th><th></th><th></th></tr>
            {% for q in liste %}

            <tr><td>{{q.intitule}}</td>
                <td>{{q.reponse}}</td>
                <td>{{q.nom}}</td>
                <td><a href="index.php?page=modifQuestion&question={{ q.id }}"><i class="fa fa-pencil" aria-hidden="true"></i></a></td>
                <td><a href="index.php?page=listeQuestion&id={{ q.id }}"><i class="fa fa-trash-o" aria-hidden="true"></i></a></td>
                {% endfor %}
        </table>
        {% set nb = form.nbpages %}

        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li>
                    <a href="index.php?page=listeQuestion&nopage={{ 0 }}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                {% for i in 1..nb %}
                    <li><a href="index.php?page=listeQuestion&nopage={{ i-1 }}">{{ i }}</a></li>
                {% endfor %}
                <li>
                    <a href="index.php?page=listeQuestion&nopage={{ nb-1 }}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    </div>
    {% endif %}
{% endblock %}